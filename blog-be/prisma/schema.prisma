// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id               String   @id @default(uuid())
  title            String
  slug             String   @unique
  content          String
  excerpt          String
  coverImage       String?
  authorId         String?
  tags             String[]
  status           String   @default("draft")
  metaTitle        String?
  metaDescription  String?
  openGraphImage   String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([slug])
  @@index([status])
}

model Author {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  bio       String?
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Role {
  ADMIN
  STAFF
  CUSTOMER
}

enum UserStatus {
  ACTIVE
  DISABLED
}

model User {
  id           String      @id @default(uuid())
  name         String
  email        String      @unique
  role         Role        @default(CUSTOMER)
  status       UserStatus  @default(ACTIVE)
  avatarUrl    String?
  passwordHash String
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@index([email])
  @@index([role])
  @@index([status])
}